@using EverythingTech.ViewModel
@model IEnumerable<UserViewModel>
}

<div class="container">

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <img class="bd-placeholder-img card-img-top" width="25%" height="25%" src="@item.Image">
                    <div class="card-body">
                        <p class="card-text">@item.Name.</p>
                        <p class="card-text">@item.Surname.</p>
                       <p class="card-text">@item.Email</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="button" asp-controller="user" asp-action="Details" asp-route-id="@item.Id" class=" btn-sm btn-outline-secondary">View</a>
                                <button type="button" class="btn-sm btn-outline-secondary">Edit</button>

                            </div>
@*                            <small class="text-muted">@item.</small>*@
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


@model IEnumerable<Projects>
@{
}
<h2>Hello index</h2>


<div class="container">

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm">
                   <section>
                        <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="@item.Image">

                   </section>
                    <div class="card-body">
                        <p class="card-text">@item.projectName.</p>
                        <p class="card-text">@item.projectDescription.</p>
                        <p class="card-text">@item.DueDate</p>
                       @* <p class="card-text">@item.Image</p>*@
                        <a class="card-text">@item.GitLink</a>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="button" asp-controller="BookClub" asp-action="Details" asp-route-id="@item.Id" class=" btn-sm btn-outline-secondary">View</a>
                                <button type="button" class="btn-sm btn-outline-secondary">Edit</button>

                            </div>
                            <small class="text-muted">@item.projectCategory</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>